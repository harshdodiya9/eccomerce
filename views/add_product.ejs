<%- include('header')%>

  <!-- MAIN CONTENT-->
  <div class="main-container">
  <div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
               <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong>product</strong> Record
                        </div>
                        <div class="card-body card-block">
                            <form action="/admin/product/insertproduct" method="post"  class="form-horizontal" enctype="multipart/form-data">
                               

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="select" class=" form-control-label">Select Category</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        
                                        <select name="product_categoryId"  id="CategoryId" onchange="return getSubcategoryId()"  class="form-control">
                                            <option >Please select Category</option>
                                            <% for(var cat of cata){%>
                                                <option value="<%= cat.id%>"><%= cat.name%></option>
                                            <%}%>
                                        </select>
                                    </div>
                                </div>  

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="select" class=" form-control-label">Select subCategory</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        
                                        <select name="product_subcategoryId" id="SubcategoryId" onchange="return getExtracategoryId()" class="form-control">
                                            <option >Please select subCategory</option>
                                            <% for(var cat of subdata){%>
                                                <option value="<%= cat.id%>"><%= cat.subcatagory%></option>
                                            <%}%>
                                        </select>
                                    </div>
                                </div>  
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="select" class=" form-control-label">Select Extracatagory</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        
                                        <select name="product_extracategoryId" id="extraid"  class="form-control">
                                            <option >Please select extraCategory</option>
                                            <% for(var ex of extradata){%>
                                                <option value="<%= ex.id%>"><%= ex.extracatagory%></option>
                                            <%}%>
                                        </select>
                                    </div>
                                </div> 
                                
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="text-input" class=" form-control-label">select brand </label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <select name="product_brandId"  class="form-control">
                                            <option >Please select brand</option>
                                            <% for(var b of allbrand){%>
                                                <option value="<%= b.id%>"><%= b.brand%></option>
                                            <%}%>
                                        </select>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="text-input" class=" form-control-label">select type </label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <select name="product_typeId"  class="form-control">
                                            <option >Please select type</option>
                                            <% for(var t of alltype){%>
                                                <option value="<%= t.id%>"><%= t.type%></option>
                                            <%}%>
                                        </select>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="text-input" class=" form-control-label">Enter product</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="text" id="text-input" name="product" placeholder="Enter product" class="form-control">
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="text-input" class=" form-control-label">Enter product price</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="text" id="text-input" name="pprice" placeholder="Enter product price" class="form-control">
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="text-input" class=" form-control-label">Enter product old-price</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="text" id="text-input" name="old_price" placeholder="Enter product old-price" class="form-control">
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label class=" form-control-label">Select product color</label>
                                    </div>
                                    <div class="col col-md-9">
                                        <div class="form-check-inline form-check">
                                            <label for="inline-radio1" class="form-check-label ">
                                                <input type="radio" id="inline-radio1" name="color" value="black" class="form-check-input">black
                                            </label>
                                            <label for="inline-radio2" class="form-check-label ">
                                                <input type="radio" id="inline-radio2" name="color" value="green" class="form-check-input">green
                                            </label>
                                            <label for="inline-radio2" class="form-check-label ">
                                                <input type="radio" id="inline-radio3" name="color" value="yellow" class="form-check-input">yellow
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label class=" form-control-label">Select product size</label>
                                    </div>
                                    <div class="col col-md-9">
                                        <div class="form-check-inline form-check">
                                            <label for="inline-radio1" class="form-check-label ">
                                                <input type="radio" id="inline-radio1" name="size" value="20" class="form-check-input">20
                                            </label>
                                            <label for="inline-radio2" class="form-check-label ">
                                                <input type="radio" id="inline-radio2" name="size" value="40" class="form-check-input">40
                                            </label>
                                            <label for="inline-radio2" class="form-check-label ">
                                                <input type="radio" id="inline-radio3" name="size" value="60" class="form-check-input">60
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="textarea-input" class=" form-control-label">Description</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <textarea name="description" id="textarea-input" rows="3" placeholder="Description..." class="form-control"></textarea>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="file-input" class=" form-control-label">product image</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="file" id="file-input" name="product_image" class="form-control-file">
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="file-multiple-input" class=" form-control-label">Product MultipaleImage</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input type="file" name="product_multi_image" multiple class="form-control-file">
                                    </div>
                                </div>
                                
                              
        
                             
                                
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fa fa-dot-circle-o"></i> Submit
                            </button>
                            <button type="reset" class="btn btn-danger btn-sm">
                                <i class="fa fa-ban"></i> Reset
                            </button>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>

<%- include('footer')%>